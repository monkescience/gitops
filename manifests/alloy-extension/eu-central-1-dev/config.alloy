// Main Alloy Configuration
// This file imports all modular configuration files

// Import Loki and Prometheus writers
import.file "loki_writer" {
  filename = "/etc/alloy/loki-writer.alloy"
}

import.file "prometheus_writer" {
  filename = "/etc/alloy/prometheus-writer.alloy"
}

// Import logging configurations
import.file "node_logs" {
  filename = "/etc/alloy/node-logs.alloy"
}

import.file "pod_logs_discovery" {
  filename = "/etc/alloy/pod-logs-discovery.alloy"
}

import.file "pod_logs" {
  filename = "/etc/alloy/pod-logs.alloy"
}

import.file "cluster_events" {
  filename = "/etc/alloy/cluster-events.alloy"
}

// Import metrics configurations
import.file "grafana_operator_metrics" {
  filename = "/etc/alloy/grafana-operator-metrics.alloy"
}
